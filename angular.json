{
  "$schema": "https://json.schemastore.org/angular-cli",
  "version": 1,
  "projects": {
    "mad-portfolio": {
      "projectType": "application",
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/mad-portfolio",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": [],
            "tsConfig": "tsconfig.app.json",
            "assets": [
              "src/favicon.ico", 
              "src/assets",
              {
                "glob": "**/*",
                "input": "src/assets/videos",
                "output": "/assets/videos"
              }
            ],
            "styles": ["src/styles.css"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "outputHashing": "all",
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500MB",
                  "maximumError": "1GB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2KB",
                  "maximumError": "4KB"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "mad-portfolio:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "mad-portfolio:build:production"
            }
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  }
}
